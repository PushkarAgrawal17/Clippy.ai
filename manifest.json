{
    "manifest_version":3,
    "name": "Clippy.ai",
    "version": "1.0",
    "description": "An on screen- ai to help with websurf!",
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
    },
    "background": {
    "service_worker": "background.js"
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["clippy.css"]
    }
    ]
}