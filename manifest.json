{
    "manifest_version": 3,
    "name": "Clippy.ai",
    "version": "1.0",
    "description": "Retro Clippy with AI brain",
    "permissions": [
        "scripting",
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost:3000/",
        "https://openrouter.ai/"
    ],
    "action": {
        "default_popup": "clippy.html",
        "default_icon": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["clippy.css"]
    }
],
"web_accessible_resources": [
  {
    "resources": [
      "clippy-happy.png",
      "bubble.png"
    ],
    "matches": ["<all_urls>"]
  }
],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}